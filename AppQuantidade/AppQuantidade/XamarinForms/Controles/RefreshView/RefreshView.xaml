<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="15"
             x:Class="AppQuantidade.XamarinForms.Controles.RefreshView.RefreshView">
    <ContentPage.Content>
        <RefreshView RefreshColor="Violet" IsRefreshing="False" Refreshing="EventodeRefresh">
            <ScrollView>
                <StackLayout>
                    <Label Text="RefreshView:" />
                    <Label Text="Propriedades:" />
                    <Label Text="Eventos:" />
                    <Label Text="Observação: Barra de Rolagem , ScrollView,ListView,CollectionView,CarrouselView" />
                    <Label x:Name="lblStatus" Text="Não Atualizada" FontSize="18" TextColor="Red" TextDecorations="Underline" />
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>