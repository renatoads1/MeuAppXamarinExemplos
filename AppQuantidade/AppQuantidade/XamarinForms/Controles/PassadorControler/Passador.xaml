<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.XamarinForms.Controles.PassadorControler.Passador">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Increment , Minimum , Maximum, Value" />
            <Stepper Increment="1" Minimum="0" Maximum="100" Value="1"/>
            <Label Text="ValueChanged" />
            <Stepper ValueChanged="ValueChanged" Increment="1" Minimum="0" Maximum="100"/>
            <Label Text="0" x:Name="ValueChangedTextAtual"/>
            <Label Text="0" x:Name="ValueChangedTextNovo"/>
            <Label Text="0" x:Name="ValueChangedTextAntigo"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>