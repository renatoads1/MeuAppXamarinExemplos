<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="20"
             x:Class="AppQuantidade.XamarinForms.Controles.CaixaDeRadioControler.CaixaDeRadio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="RadioButon Escolha" />
            <RadioButton IsChecked="False" Text="C#" TextColor="CadetBlue" GroupName="top" />
            <RadioButton IsChecked="False" Text="CSS" TextColor="Pink" GroupName="top"/>
            <RadioButton IsChecked="False" Text="HTML" TextColor="Silver" GroupName="top"/>
            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" Color="Black"/>
            <RadioButton IsChecked="False" Text="C#" TextColor="CadetBlue" GroupName="lol" />
            <RadioButton IsChecked="False" Text="CSS" TextColor="Pink" GroupName="lol"/>
            <RadioButton IsChecked="False" Text="HTML" TextColor="Silver" GroupName="lol"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>