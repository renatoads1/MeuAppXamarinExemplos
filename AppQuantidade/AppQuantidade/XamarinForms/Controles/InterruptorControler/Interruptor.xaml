<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             Padding="10"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.XamarinForms.Controles.InterruptorControler.Interruptor">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IsToggled"/>
            <Switch HorizontalOptions="Start" IsToggled="True"/>
            <Label Text="ThumbColor ,OnColor "/>
            <Switch HorizontalOptions="Start" OnColor="Green" ThumbColor="GreenYellow"/>
            <Label Text="Toggled"/>
            <Switch HorizontalOptions="Start" Toggled="Trocou" OnColor="Green" ThumbColor="GreenYellow"/>
            <Label x:Name="lblSwitch" Text="lbl Switch"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>